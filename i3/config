# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"
#This is i3 specific part of i3 config file

for_window [class="^.*"] border pixel 0
gaps inner 4
gaps outer 0
smart_gaps on
#This is a part of i3 config file with color congiguration


set $bar_back #1c8e5f
set $bar_sep #75AF96
set $bg-color            #27a97f
set $active-bg-color     #166f5f
set $text-color          #ffffff
set $inactive-text-color #969896
set $urgent-bg-color     #cc6666

# window colors
#                       border               background         text                 indicator
client.focused          $active-bg-color     $active-bg-color   $text-color          $inactive-text-color
client.unfocused        $bg-color            $bg-color          $inactive-text-color $inactive-text-color
client.focused_inactive $bg-color	     $bg-color          $text-color          $inactive-text-color
client.urgent           $urgent-bg-color     $urgent-bg-color   $text-color          $inactive-text-color
#This is a part of i3 config file $XDG_CONFIG_HOME/i3/config
#IT contains homebook specific configuration

bar {
        position top
        
        strip_workspace_numbers true
        mode hide
        hidden_state hide
        modifier $mod
        tray_output eDP1
        height 23
        separator_symbol "_"
        font pango: DejaVu Sans Mono, Awesome 10
        status_command i3blocks -c $CONFIGS/i3/blocks
        position bottom
        colors {
            background $bar_back
            separator $bar_sep
            #                  border             background         text
            focused_workspace  $active-bg-color   $bg-color          $text-color
            inactive_workspace $bg-color          $active-bg-color   $inactive-text-color
            urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
        }
}

