#!/bin/bash
#game mod for better UX :D
USAGE="USAGE: \'$0 on|off \'"

if [ $# -lt 1 ] || [ $# -gt 1 ]; then
    echo $USAGE
    exit 1;
fi

if [ $1 = 'on' ]; then
    pkill compton
    compton --unredir-if-possible -b
elif [ $1 = 'off' ]; then
    pkill compton
    compton -b
else
    echo $USAGE
    exit 1;
fi
exit 0;
