general {
   output_format = "i3bar"
   colors = true
   interval = 1
}

order += "battery 0"

battery 0 {
   format = "%percentage %status rmain: %remaining cons: %consumption"
   hide_seconds = true
   last_full_capacity = true
   integer_battery_capacity = true
   format_down = "No battery"
   status_chr = "CHR"
   status_bat = "BAT"
   status_full = "FULL"
   path = "/sys/class/power_supply/BAT%d/uevent"
   low_threshold = 10
}
